<div class="row">
  <div class="col-md-12">
    <%= form_for(@sensor_value, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :value%>
      </div>
      <div class="col-sm-8">
        <%= f.number_field :value, class: "form-control", autofocus: true%>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :sensor_id%>
      </div>
      <div class="col-sm-8">
        <%= f.collection_select(:sensor_id, Sensor.all, :id, :name) %>
      </div>
    </div>

    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :date%>
      </div>
      <div class="col-sm-8">
        <%= f.date_field :date, class: "form-control", placeholder: "Date", autofocus: true%>
      </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%=f.submit "Save",class:"btn btn-primary btn-lg"%>
        </div>
    </div>

  </div>
</div>
<%end%>
